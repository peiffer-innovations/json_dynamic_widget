{
  "type": "set_value",
  "args": {
    "values": {
      "customColor": "#FF0000"
    },
    "child": {
      "type": "set_value",
      "listen": [
        "customColor"
      ],
      "args": {
        "values": {
          "customThemeData": {
            "appBarTheme": {
              "backgroundColor": "${customColor}"
            }
          }
        },
        "child": {
          "type": "animated_theme",
          "listen": [
            "customThemeData"
          ],
          "args": {
            "data": "${customThemeData}",
            "duration": 1000,
            "child": {
              "type": "scaffold",
              "args": {
                "appBar": {
                  "type": "app_bar",
                  "args": {
                    "title": {
                      "type": "text",
                      "args": {
                        "text": "AnimatedTheme"
                      }
                    }
                  }
                },
                "floatingActionButton": {
                  "type": "elevated_button",
                  "id": "press_me_button",
                  "args": {
                    "onPressed": "${set_value('customColor', '#0000FF')}",
                    "child": {
                      "type": "text",
                      "args": {
                        "text": "Press Me!"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}